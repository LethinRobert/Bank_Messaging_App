<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText android:id="@+id/email_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/email_message" />
    <EditText android:id="@+id/memberid_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/memberid_message"
        android:layout_below="@id/email_message" />
    <EditText android:id="@+id/password_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/password_message"
        android:layout_below="@id/memberid_message" />
    <Button android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage"
        android:layout_below="@id/password_message" />


</RelativeLayout>
